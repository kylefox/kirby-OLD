#!/usr/bin/env python
import sys
import os


if __name__ == "__main__":
  command = sys.argv[1]
  if command == 'serve':
    print 'Serving...'
  elif command == 'new':
    try:
      print "Creating new Kirby site at %s" % (os.path.join(os.getcwd(), sys.argv[2]))
    except IndexError:
      print "You must specify a site name: kirby new [NAME]"
      sys.exit(0)
  else:
    print "Command '%s' not recognized." % command
    sys.exit(0)